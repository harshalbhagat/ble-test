<Page
    x:Class="bleservicedemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:bleservicedemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,373,10,170">
            <ProgressRing x:Name="progressRing" HorizontalAlignment="Center" VerticalAlignment="Center"  RenderTransformOrigin="6.5,0.667" Margin="0,10,0,-35" Width="122" Height="122"/>
        </StackPanel>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Center" Margin="10,598,10,10" VerticalAlignment="Center" Width="340" Click="btnStart_Click" RenderTransformOrigin="0.471,4.531"/>
        <TextBlock x:Name="lblComplete" HorizontalAlignment="Center" Margin="20,573,5,47" TextWrapping="NoWrap" Text="" TextAlignment="Center" VerticalAlignment="Center" Width="340" FontSize="20" FontFamily="Segoe UI Semibold"/>
        <ListView x:Name="listView" HorizontalAlignment="Center"  Height="195" Margin="10,10,0,0" VerticalAlignment="Top" Width="340" FontWeight="Bold">

        </ListView>
        

    </Grid>
</Page>
